<%- include('layout') %>

<% if (typeof flashMessage !== 'undefined') { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= flashMessage %>
        <a href="/cart" class="btn btn-sm btn-outline-dark ms-2">Go to Cart</a>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<h2>Products</h2>
<div class="row">
    <% products.forEach(product => { %>
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text"><%= product.description %></p>
                    <p><strong>$<%= product.price %></strong></p>
                    <span class="badge bg-secondary"><%= product.source %></span>
                </div>
                <!-- âœ… Add to Cart Form -->
                <form action="/cart/add" method="POST" class="mt-3">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <input type="hidden" name="name" value="<%= product.name %>">
                    <input type="hidden" name="description" value="<%= product.description %>">
                    <input type="hidden" name="price" value="<%= product.price %>">
                    <input type="hidden" name="source" value="<%= product.source %>">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="btn btn-success w-100">Add to Cart</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>
