<!DOCTYPE html>
<html lang="en">
<head>
    <title>OneStop Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // once the DOM is ready...
        document.addEventListener('DOMContentLoaded', () => {
          // listen for any click on an image with class .clickable-img
          document.querySelectorAll('.clickable-img').forEach(img => {
            img.addEventListener('click', e => {
              const url = e.currentTarget.dataset.imageUrl;
              document.getElementById('imageModalSrc').src = url;
            });
          });
        });
      </script>
    <!-- Image Preview Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0">
            <img id="imageModalSrc" src="" class="img-fluid rounded" alt="Preview">
            </div>
        </div>
        </div>
    </div>
    <div class="container mt-4">
        <nav class="mb-4">
            <% if (user) { %>
                <% if (user.role !== 'admin') { %>
                  <a href="/products">Products</a> |
                  <a href="/cart">Cart (<%= (cart || []).length %>)</a> |
                  <a href="/orders">Orders</a> |
                <% } else { %>
                  <a href="/admin/dashboard">Admin Dashboard</a> |
                <% } %>
                <a href="/logout">Logout</a>
              <% } else { %>
                <a href="/login">Login</a> |
                <a href="/register">Register</a>
              <% } %>
        </nav>
        
    </div>
